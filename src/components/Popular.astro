---
import { popularDishes } from "../constants";
import FavoriteCard from "./FavoriteCard.astro";
---

<section
  class="flex w-full flex-col items-center py-10 sm:py-20 px-4 justify-center max-w-6xl mx-auto"
>
  <span
    class="inline-block text-sm bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full text-center"
    >Popular dishes</span
  >
  <h2 class="text-3xl mt-1 font-bold tracking-tighter md:text-4xl/tight">
    Our costumer's favorites
  </h2>
  <p class="text-gray-600 mt-1">
    Discover the most popular dishes in our restaurant
  </p>
  <ul class="grid grid-cols-1 sm:grid-cols-3 mt-6 sm:mt-10 gap-6">
    {
      popularDishes.map((dish) => (
        <FavoriteCard title={dish.title} href={dish.href} img={dish.img} />
      ))
    }
  </ul>
</section>
