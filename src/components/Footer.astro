---
import { navLinks, socialLinks } from "../constants";
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";
---

<footer class="bg-stone-900 py-12 px-4">
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mx-auto max-w-6xl">
    <Image
      class="w-24 mx-auto sm:w-36 h-auto"
      src={logoImg}
      densities={[1.5, 2]}
      format="webp"
      loading="lazy"
      decoding="async"
      alt=""
    />
    <div>
      <h2 class="text-amber-400 font-semibold">Links</h2>
      <ul class="flex flex-col gap-2 mt-3 text-stone-400">
        {
          navLinks.map((link) => (
            <li>
              <a class="hover:text-neutral-300" href={link.href}>
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <h2 class="text-amber-400 font-semibold">Socials</h2>
      <ul class="flex flex-col gap-2 mt-3 text-stone-400">
        {
          socialLinks.map((link) => (
            <li>
              <a class="hover:text-neutral-300" href={link.href}>
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <address class="not-italic text-stone-400">
      <h2 class="text-amber-400 font-semibold mb-3">Address</h2>
      85 South Park Drive<br />
      Colchester, VT 05446<br />
      <h2 class="text-amber-400 font-semibold mb-3 mt-6">Phone</h2>
      +1-802-495-5952<br />
      <h2 class="text-amber-400 font-semibold mb-3 mt-6">Opening hours</h2>
      Sun - Thur: 11am - 10pm<br />
      Fri - Sat: 11am - 10:30pm<br />
    </address>
  </div>
</footer>
