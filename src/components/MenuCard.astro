---
import { formatPrice, capitalize } from "../utils";

interface Props {
  name: string;
  description: string | undefined;
  price: number | Record<string, number | undefined>;
  imgSrc?: string;
}

const { name, description, price, imgSrc } = Astro.props;
const formattedPrice = formatPrice(price);
---

<li class="flex flex-col sm:flex-row gap-4">
  <a
    href="https://cdn.photoswipe.com/photoswipe-demo-images/photos/3/img-2500.jpg"
    id="photo"
    data-pswp-height="1800"
    data-pswp-width="2500"
  >
    <div class="w-80 h-auto rounded-md overflow-hidden">
      <img
        src={imgSrc ?? "/mojito.webp"}
        class="w-full h-full"
        alt="thumbnail"
      />
    </div>
  </a>
  <div class="flex flex-col justify-center w-full gap-4">
    <h3 class="font-semibold">{name}</h3>
    {description && <p class="max-w-prose text-stone-600">{description}</p>}
    {
      typeof formattedPrice === "string" ? (
        <p class="text-stone-900 ">{formattedPrice}</p>
      ) : (
        <ul class="text-stone-900">
          {formattedPrice.map(({ name, price }) => (
            <li class="flex justify-between">
              <span>{capitalize(name)}</span>
              <span class="">{price}</span>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</li>
